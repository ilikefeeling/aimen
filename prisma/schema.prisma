generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  image         String?
  kakaoId       String?   @unique
  emailVerified DateTime?
  role          Role      @default(USER)
  status        Status    @default(PENDING)
  plan          Plan      @default(FREE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  payments      Payment[]
  sermons       Sermon[]
  sessions      Session[]
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Sermon {
  id           String      @id @default(cuid())
  title        String
  videoUrl     String
  churchName   String?
  analysisData Json?
  userId       String
  createdAt    DateTime    @default(now())
  highlights   Highlight[]
  user         User        @relation(fields: [userId], references: [id])
}

model Highlight {
  id        String   @id @default(cuid())
  sermonId  String
  startTime Int
  endTime   Int
  caption   String
  createdAt DateTime @default(now())
  platform  String?
  title     String
  emotion   String?
  updatedAt DateTime @updatedAt
  clips     Clip[]
  sermon    Sermon   @relation(fields: [sermonId], references: [id])
}

model Clip {
  id           String    @id @default(cuid())
  highlightId  String
  platform     String
  language     String    @default("korean")
  videoUrl     String?
  thumbnailUrl String?
  duration     Int
  fileSize     Int       @default(0)
  resolution   String
  status       String    @default("PENDING")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  dubbedUrl    String?
  highlight    Highlight @relation(fields: [highlightId], references: [id], onDelete: Cascade)

  @@index([highlightId])
  @@index([status])
  @@index([language])
}

model Payment {
  id         String   @id @default(cuid())
  amount     Int
  status     String
  paymentKey String   @unique
  userId     String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  ACTIVE
}

enum Plan {
  FREE
  PRO
}
